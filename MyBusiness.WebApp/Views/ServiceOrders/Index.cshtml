@model IEnumerable<MyBusiness.Models.ServiceOrderListModel>

@{
    ViewData["Title"] = "Index";
}

<h1>ServiceOrderStatuss</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceOrderId)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-circle-fill" fill="@item.Color">
                        <circle cx="8" cy="8" r="8" />
                    </svg>
                    @item.StatusName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceOrderId)
              
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ServiceOrderId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ServiceOrderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ServiceOrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

