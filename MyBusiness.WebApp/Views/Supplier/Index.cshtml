
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Supplier List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Supplier</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Created By</th>
                <th>Creation Date</th>
                <th>Update By</th>
                <th>Last Update </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<!-- https://github.com/bhrugen/Uplift -->

@section Scripts{
    <script src="~/js/supplier-list.js"></script>

}

